@model IEnumerable<marathon.Models.Marathonentity>
@{
    ViewData["Title"] = "Home Page";
    Layout = "Usershared";
    int index = 1;
}
<link href="~/css/styles.css" rel="stylesheet" />
<div id="introCarousel" class="carousel slide carousel-fade shadow-2-strong" data-mdb-carousel-init>
    <!-- Indicators -->
    <div class="carousel-indicators">
        <li data-mdb-target="#introCarousel" data-mdb-slide-to="0" class="active"></li>
        <li data-mdb-target="#introCarousel" data-mdb-slide-to="1"></li>
        <li data-mdb-target="#introCarousel" data-mdb-slide-to="2"></li>
    </div>
    <style>
        .navbar .nav-link {
            color: white !important;
        }
    </style>
    <!-- Inner -->
    <div class="carousel-inner">
        <!-- Single item -->
        <div class="carousel-item active">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white text-center" data-mdb-theme="dark">
                        <h1 class="mb-3">马拉松赛事一站式服务</h1>
                        <h5 class="mb-4">开启健康之旅</h5>
                        <a class="btn btn-outline-light btn-lg m-2" data-mdb-ripple-init asp-controller="Checks" asp-action="UserIndex"
                           role="button" rel="nofollow">报名马拉松</a>
                        <a class="btn btn-outline-light btn-lg m-2" href="#"
                            role="button">交流论坛</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Single item -->
        <div class="carousel-item">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.3);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white text-center">
                        <h2>选手风采</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Single item -->
        <div class="carousel-item">
            <div class="mask" style="
                background: linear-gradient(
                  45deg,
                  rgba(29, 236, 197, 0.7),
                  rgba(91, 14, 214, 0.7) 100%
                );
              ">
                <div class="d-flex justify-content-center align-items-center h-100" data-mdb-theme="dark">
                    <div class="text-white text-center">
                        <h2>为选手喝彩！</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Inner -->
    <!-- Controls -->
    <a class="carousel-control-prev" href="#introCarousel" role="button" data-mdb-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">前一页</span>
    </a>
    <a class="carousel-control-next" href="#introCarousel" role="button" data-mdb-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">后一页</span>
    </a>
</div>
<main class="mt-5">
    <div class="container">
        <!--Section: Content-->
        <section class="text-center">
            <h4 class="mb-5"><strong>最新赛事报名</strong></h4>

            <div class="row">
                @foreach(var item in Model){
                    <div class="col-lg-4 col-md-12 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay" data-mdb-ripple-init data-mdb-ripple-color="light">
                                <img src="@Url.Action("GetImage","Marathonentities",new { MaratnonId = item.MarathonId})" alt="未上传图片" class="img-fluid" />
                                <a href="#!">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem =>item.MarathonName)</h5>
                                <p class="card-text">
                                    举办时间：
                                    @{
                                        var data = item.MarathonData.ToString("yyyy-MM-dd");
                                    }
                                    
                                    @data
                                </p>
                                <p class="card-text">
                                    举办地点：@Html.DisplayFor(modelItem => item.MarathonPlace)
                                </p>
                                <p class="card-text">
                                    详情：@Html.DisplayFor(modelItem => item.MarathonDetails)
                                </p>
                                <a asp-action="CreateUser" asp-controller="Checks" class="btn btn-primary" data-mdb-ripple-init>我要报名</a>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </section>
        <!--Section: Content-->
    </div>
</main>

<script src="~/js/mdb.umd.min.js"></script>
<script src="~/js/scripts.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
