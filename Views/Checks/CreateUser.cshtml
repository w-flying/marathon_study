@model marathon.Models.Check

@{
    ViewData["Title"] = "Create";
    Layout = "Usershared";
}

<center><h1>报名</h1></center>
<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <select asp-for="UserName" class="form-control" asp-items="ViewBag.UserName"></select>
            </div>
            <div class="form-group">
                <label asp-for="MarathonId" class="control-label"></label>
                <select asp-for="MarathonId" class="form-control" asp-items="ViewBag.MarathonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Health" class="control-label"></label>
                <select asp-for="Health" class="form-control" asp-items="ViewBag.Health"></select>
                <span asp-validation-for="Health" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarathonClass" class="control-label"></label>
                <select asp-for="MarathonClass" class="form-control" asp-items="ViewBag.MarathonClass"></select>
                <span asp-validation-for="MarathonClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience" class="control-label"></label>
                <input asp-for="Experience" class="form-control" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="niceButton3 " />
                <a asp-action="UserIndex" class="niceButton3 " style="margin-left:50px;">返回</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

