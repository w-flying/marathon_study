@model IEnumerable<marathon.Models.User>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/img.css" rel="stylesheet" />
<p>
    <a asp-action="Create">新建用户</a>
</p>

<script src="~/echarts/echarts.min.js"></script>


<table class="table" id="mytable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <div class="img_contain">
                        <img src="@Url.Action("GetImage","Users",new { username= item.UserName})" alt="未上传图片" />
                    </div>

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.UserName"><button class="btn btn-secondary">编辑</button></a> |
                    <a asp-action="Delete" asp-route-id="@item.UserName"><button class="btn btn-danger">删除</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <link rel="stylesheet" href="~/datatables/datatables.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/datatables/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#mytable').DataTable({
                search: {
                    return: true
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,  // 修正了拼写错误
                    "targets": 0
                }],
                "order": [[1, 'asc']]

            });

            table.on('order.dt search.dt',
                function () {
                    table.column(0, {
                        search: 'applied',
                        order: 'applied'
                    });
                }).draw();
        });
    </script>

}